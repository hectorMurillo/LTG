        <table border="1">
            <tr>
                <th>costo total de la madera</th>
                <td>
                    $ <%= datos.costoMadera %> MXN
                </td>
            </tr>
            <tr>
                <th>Flete</th>
                <td>
                    $ <%= datos.costoFlete %> MXN
                </td>
            </tr>
            <tr>
                <th>Descarga</th>
                <td>
                    $ <%= datos.costoDescarga %> MXN
                </td>
            </tr>
            <tr>
                <th>Total</th>
                <td>
                    $ <%= datos.subtotal %> MXN
                </td>
            </tr>

        </table>

        <br><br><br><br><br><br><br><br>
        <br><br><br><br><br><br><br><br>
        <br><br><br><br><br>
